    <client>
      <endpoint binding="basicHttpBinding" bindingConfiguration="agathaServiceBinding"
							contract="Agatha.Common.WCF.IWcfRequestProcessor"
							name="agathaService" address="http://localhost:1459/Service.svc" />
    </client>
  </system.serviceModel>
</configuration>