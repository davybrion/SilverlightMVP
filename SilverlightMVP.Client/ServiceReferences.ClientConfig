<configuration>
  <system.serviceModel>
    <bindings>
      <basicHttpBinding>
        <binding name="agathaServiceBinding" maxBufferSize="2147483647" maxReceivedMessageSize="2147483647"
						 receiveTimeout="00:30:00" sendTimeout="00:30:00">
          <security mode="None" />
        </binding>
      </basicHttpBinding>
